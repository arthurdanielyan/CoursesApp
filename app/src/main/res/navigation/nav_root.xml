<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@id/startupFragment">

    <!-- Decides where to go on app launch -->
    <fragment
        android:id="@+id/startupFragment"
        android:name="com.example.presentation.startup.StartupFragment"
        tools:layout="@layout/fragment_startup"
        android:label="Startup" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.presentation.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="Login" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.presentation.main.MainFragment"
        tools:layout="@layout/fragment_main"
        android:label="Main" />

</navigation>
